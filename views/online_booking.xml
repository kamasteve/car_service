  <template id="book_car_online" name="Online Booking">
    <t t-call="website.layout">


   <div class="col o_colored_level">
     <div class="row">
      <div class="col-md-6">
       <form action="/shop/book/car" method="POST" class="form-horizontal mt32" enctype="multipart/form-data">

       <div class="col o_colored_level">
         <div class="form-group"><span class="fa fa-hand-o-right"/>&amp;nbsp; &amp;nbsp;Step 1 :&amp;nbsp; Make A Reservation<br/><br/><label for="sel1" title="">Select Service Type:
               </label><select class="form-control" id="sel1" name="sellist1"><option selected="selected" title="">Corporate
                 </option><option title="">Parties and Events
                 </option><option title="">Airport Transfer
                 </option><option title="">Private Jet Transfer
                 </option><option title="">Celebrity Chauffeur
                 </option><option title="">Cruise Ship Transfer
                 </option><option title="">Weddings
                 </option><option title="">Point to Point
                 </option><option title="">Sightseeing
                 </option><option title="">Tour Groups
                 </option><option title="">Modelling And Product Launch Photography

             </option></select></div>
         <div class="form-group">
           <label for="from_date" title="">
             <b>Pick-Up Date:</b>
           </label>
           <input class="form-control" type="datetime-local" id="from_date" Name="from_date" title=""/>
           <label for="from_time" title="">
             <b>Pick-Up Time:</b>
           </label>
           <input class="form-control" type="datetime-local" id="from_time" name="from_time" title=""/>
         </div>
         <div class="form-row form-group">
           <div class="col">
             <label for="txtSource" title="">
               <b>Origin:</b>
             </label>
             <input class="form-control pac-target-input" type="text" id="input-location-start" onchange="locationCheck"  name="txtSource"  value="" placeholder="Pick-up address" autocomplete="off" title=""/>
           </div>
         </div>

         <div class="form-row form-group">
           <div class="col">
             <label for="txtDestination" title="">
               <b>Destination:</b>
             </label>
             <input class="form-control pac-target-input" type="text" id="input-location-end" onchange="locationCheck"  name="txtDestination" value="" placeholder="Drop-off address" autocomplete="off" title=""/>
           </div>
         </div>
             <div t-attf-class="form-group #{error and 'priority' in error and 'has-error' or ''}">
                 <label class="control-label" for="priority">Select Vihecle</label>
                 <select class="form-control" name="cars" id="cars">
                     <t t-foreach="cars" t-as="car">
                         <option t-attf-value="#{car.id}"><t t-esc="car.name"/></option>
                     </t>
                 </select>
             </div>
             <script>

                 $(document).ready(function() {

                     update_sub_categories()

                     $("#cars").change(function() {
                         update_sub_categories()
                     });

                     function update_sub_categories() {
                     var time = ("#time");

                         $.ajax({url: "/shop/products/validate", data:{cars: $("#cars").val(),from_time: $("#from_time").val(),from_date: $("#from_date").val()},success: function(result){
                             $("#subcategoy_container").html(result);

                         }});
                     }

                     });
             </script>

      <!--
       <div class="form-row form-group">
           <div class="col">
             <label for="waypoints" title="">
               <b>Waypoints:</b>
             </label>
             <input class="form-control pac-target-input" type="text" id="waypoints" value="Sydney NSW, Australia" placeholder="Enter a query" autocomplete="off" title=""/>
           </div>
         </div>
       -->
       <div id="subcategoy_container">

       </div>
         <div class="input_fields_wrap">
           <a href="#" class="add_field_button"><span class="fa fa-plus"/> Add Route Stops And Waiting Time</a>

         </div><p />
        <div class="form-group">
         <div class="input-group mb-6">
           <div class="input-group-prepend">
             <span class="input-group-text"><span class="fa fa-user-o"/>&amp;nbsp; Passengers Count&amp;nbsp; &amp;nbsp;&amp;nbsp;</span>
             <div class="quantity buttons_added">
               <input type="button" value="-" class="minus" title=""/>
               <input type="text" step="1" min="0" max="" name="quantity" value="0" title="" class="input-text qty text" size="4"/>
               <input type="button" value="+" class="plus" title=""/>
             </div>
           </div>
         </div>
         <div class="input-group mb-6">
           <div class="input-group-prepend">
             <span class="input-group-text"><span class="fa fa-suitcase" data-original-title="" title="" aria-describedby="tooltip941314"/>&amp;nbsp; Number of Luggage</span>
             <div class="quantity buttons_added">
               <input type="button" value="-" class="minus" title=""/>
               <input type="text" step="1" min="0" max="" name="quantity" value="0" title="" class="input-text qty text" size="4"/>
               <input type="button" value="+" class="plus" title=""/>
             </div>
           </div>
         </div>
         <input type="button" value="Get Route" onclick="GetRoute()" title=""/>
         </div>
       </div>
       <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
     <div class="row">
       <div class="form-group">
           <button class="btn btn-primary btn-lg">Submit Ticket</button>
       </div>
     </div>
 </form>
 </div>
<div class="col-md-6">
<div  id="map" name="map" >

</div>
</div>
 </div>

   </div>
 </t>

</template>
<template id="booking_success" name="Booking Successfull">
    <t t-call="website.layout">
        <div id="wrap" class="oe_structure oe_empty">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="text-center">Thank You</h1>
                            <h3 class="text-muted text-center">Thank you for your booking</h3>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </t>
</template>

</odoo>
